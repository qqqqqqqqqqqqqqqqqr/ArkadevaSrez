<Page x:Class="ArkadevaSrez3.Pagess.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkadevaSrez3.Pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Выберите как желаете войти</TextBlock>
            <Button Click="BTNClient_Click" x:Name="BTNClient" Margin="0,10,0,0">Войти как клиент</Button>
            <Button Click="BTNAdmin_Click" x:Name="BTNAdmin" Margin="0,10,0,0">Войти как администратор</Button>

        </StackPanel>
       
    </Grid>
</Page>
